  <body style="font-size:20px; padding:50px;">
    <h3>register</h3>
    <form action = '/register' method = 'POST' class="form-inline">
      <label class="sr-only" for="inlineFormInput">email</label>
        <input name = 'email' type="email" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="email">
      <label class="sr-only" for="inlineFormInput">password</label>
        <input name = 'password' type="password" class="form-control" id="inlineFormInput" placeholder="password">
      <button type="submit" class="btn btn-primary">register</button>
      <h4>already have an account?  <a class="btn btn-primary" href='/login' role="button">login</a></h4>
    </form>
  </body>
</html>